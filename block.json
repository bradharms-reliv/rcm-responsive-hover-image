{
  "name": "RcmResponsiveHoverImage",
  "category": "Common",
  "label": "Responsive Hover Image",
  "description": "Responsive image with alt description that changes when hovering, plus optional rich content footer",
  "renderer": "mustache",
  "icon": "",
  "cache": true,
  "editor": "react-field-dialog",
  "fields": [
    {
      "name": "src",
      "type": "image",
      "label": "Normal Image",
      "default": "//static.reliv.com/art/WebStuff/Products/US/standard/Classic-web.jpg"
    },
    {
      "name": "hoverSrc",
      "type": "image",
      "label": "Image to show when hovering (optional)",
      "default": "//static.reliv.com/art/WebStuff/Products/US/standard/Now-web.jpg"
    },
    {
      "name": "href",
      "type": "url",
      "label": "Link to go to when image is clicked",
      "default": "https://reliv.com"
    },
    {
      "name": "alt",
      "type": "text",
      "label": "Image \"alt\" description that search engines and blind people see",
      "default": ""
    },
    {
      "name": "footerContent",
      "label": "Footer Content",
      "type": "richEdit",
      "default": "",
      "required": false
    }
  ]
}
